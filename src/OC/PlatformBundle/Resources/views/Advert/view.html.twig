{# src/OC/PlatformBundle/Resources/view/Advert/view.html.twig #}

{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}
	
  {# On vérifie qu'une image soit bien associée à l'annonce #}
  <div class="row">
   
      {% if advert.image is not null %}
        <div class="col-xs-3"><div >  
        <img style="width : 170px; margin-top: 15px " src="{{ advert.image.url }}" alt="{{ advert.image.alt }}">
        </div></div>
	 {% endif %}
	  

    <div class="col-md-9"><div >
        <h2>{{ advert.title }}</h2>
        <i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>
      </div>
    </div>
  </div>

  <div class="well">
    {{ advert.content }}
    <div>
    {% if listAdvertSkills|length > 0 %}
    Cette annonce requiert les compétences suivantes :
      <ul>
        {% for advertSkill in listAdvertSkills %}
          <li>{{ advertSkill.skill.name }} : niveau {{ advertSkill.level }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
	{% if not advert.categories.empty %}
      <p>
    Elle est parue dans les catégories suivantes :
    {% for category in advert.categories %}
      {{ category.name }}{% if not loop.last %}, {% endif %}
    {% endfor %}
      </p>
    {% endif %}
    

  </div>
  
    {% if listApplications is not null %}
      {% for listApplication in listApplications %}
	 <div class="col-xs-11 col-md-offset-1"><div class="panel panel-default">
         <p>{{ listApplication.content }}</p>
         <i>Par {{ listApplication.author }}, le {{ listApplication.date|date('d/m/Y') }}</i>
        </div>
      </div>
      {% endfor %}
    {% endif %}
  

  <p>
    <a href="{{ path('oc_platform_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
    <a href="{{ path('oc_platform_edit', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'annonce
    </a>
    <a href="{{ path('oc_platform_delete', {'id': advert.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'annonce
    </a>
  </p>

{% endblock %}