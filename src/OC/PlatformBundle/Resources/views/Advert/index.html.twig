{# src/OC/PlatformBundle/Resources/views/Advert/index.html.twig #}

{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

	<h2>Liste des annonces</h2>
	<div >
		<ul>
			{% for advert in listAdverts %}
				<div class="row well">	
					<li style=" list-style: none">
						{% if advert.image is not null %}
							<div class="col-md-3">  
								<img style="width : 170px; margin-top: 15px " src="{{ advert.image.url }}" alt="{{ advert.image.alt }}">
							</div>	  
						{% endif %}
						<div class="col-md-9 col-md-push-1">		  
							<a href="{{ path('oc_platform_view', {'id': advert.id}) }}">
								<strong>{{ advert.title }}</strong>
							</a>

							par {{ advert.author }},
							le {{ advert.date|date('d/m/Y') }}


							{% if advert.advertskills|length > 0 %}
								<div >
									<em>Cette annonce requiert les compétences suivantes :</em>
									<br/>
									{% for advertSkill in advert.advertskills %}
										{{ advertSkill.skill.name }} : niveau {{ advertSkill.level }}{% if not loop.last %}, {% endif %}
									{% endfor %}
								</div>
							{% endif %}

							<div >
								{% if not advert.categories.empty %}

									<em>Elle est parue dans les catégories suivantes :</em>
									<br/>
									{% for category in advert.categories %}
										{{ category.name }}{% if not loop.last %}, {% endif %}
									{% endfor %}  
								{% endif %}
							</div>

						</div>
					</li>

				</div>

			{% else %}
				<li>Pas (encore !) d'annonces</li>
				{% endfor %}
		</ul>
	</div>
	<ul class="pagination">
		{# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
		{% for p in range(1, nbPages) %}
			<li{% if p == page %} class="active"{% endif %}>
				<a href="{{ path('oc_platform_home', {'page': p}) }}">{{ p }}</a>
			</li>
		{% endfor %}
	</ul>
{% endblock %}